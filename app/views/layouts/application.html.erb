<!DOCTYPE html>

<% if browser.device.mobile? %>
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
<% else %>
	<meta name="viewport" content="width=device-width, initial-scale=1">
<% end %>
<meta name="HandheldFriendly" content="true">
<meta name="theme-color" content="#19413C">
<meta property="og:url" content="http://moderngaulish.herokuapp.com/" />
<meta property="og:type" content="website" />
<meta property="og:image" content="/assets/logo.jpg" />
<meta property="og:title" content="The Modern Gaulish Language" />

<html>
  <head>
    <title>The Modern Gaulish Language</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  	<link rel="icon" type="image/png" href="data:image/png;base64,">
  </head>

  <body>
  	<% if notice.present? %>
	    <div class="alert alert-info" id="user_alert">
	    	<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	    	<%= notice %>
	    </div>
	<% end %>
    <% if alert.present? %>
	    <div class="alert alert-danger" id ="user_alert">
	    	<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	    	<%= alert %>
	    </div>
	<% end %>
	
  	<nav class="navbar navbar-default" id="navbar-id">
	  <div class="container-fluid">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" id="navbar-toggle-id" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar" id="icon-bar-id"></span>
	        <span class="icon-bar" id="icon-bar-id"></span>
	        <span class="icon-bar" id="icon-bar-id"></span>
	      </button>
	      <%= link_to 'Modern Gaulish', root_path, class: "navbar-brand", id: "navbar-brand-id" %>
	    </div>
	
	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li><a href="#" id="nav-link-id">Forum</a></li>
	        <li class="dropdown">
	          <a href="#" class="dropdown-toggle" id="dropdown-toggle-id" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Grammar <span class="caret"></span></a>
	          <ul class="dropdown-menu">
	            <li><%= link_to 'Introduction', introduction_path, id: "nav-link-id" %></li>
	          </ul>
	        </li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <% if user_signed_in? %>
  				<li><%= link_to 'Sign out', destroy_user_session_path, method: :delete, id: "nav-link-id" %></li>
			<% else %>
  				<li><%= link_to 'Sign In', new_user_session_path, id: "nav-link-id" %></li>
  				<li><%= link_to 'Sign Up', new_user_registration_path, id: "nav-link-id" %></li>
			<% end %>
	      </ul>
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav>

    <%= yield %>
  </body>
</html>
