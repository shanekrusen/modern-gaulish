<div class="spacer"></div>

<div class="header">
	<h1><%= @category.name %></h1>
</div>

<div class="posts_box box1">
	<div class="inner">
		<div class="categories">
			<% @category.posts.each do |post| %>
				<div class="category-container">
					<h2><%= post.title %></h2>
					<br/>
					<p><%= post.user.email %></p>
				</div>
			<% end %>
		</div>
	</div>
</div>

<div class="box box1">
	<div class="inner">
		<div class="user_form">
			<h1>Add a New Post</h1>
			<br />
			<%= form_for @post, url: category_posts_path(@category) do |f| %>
				<div class="field">
					<%= f.label :title %><br />
					<%= f.text_area(:title, size:"24x1") %>
				</div>
				<br />
				<div class="field">
					<%= f.label :content %><br />
					<%= f.text_area(:content, size:"24x6") %>
				</div>
				<br />
				<%= f.submit "Add a Post", class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>
