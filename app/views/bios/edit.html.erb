<div class="spacer"></div>

<div class="box box1">
	<div class="inner">
		<div class="user_form">
			<h2>Edit Bio</h2>
			<br />
			<%= form_for [@user, @bio], url: user_bio_path(@user, @bio) do |f| %>
				<div class="field">
					<%= f.label :bio %><br />
					<%= f.text_area(:bio, size:"24x6", autofocus: true)%>
				</div>
				<br />
				<div class="actions">
					<%= f.submit "Save Bio", class: "btn btn-primary" %>
				</div>
			<% end %>
		</div>
	</div>
</div>
